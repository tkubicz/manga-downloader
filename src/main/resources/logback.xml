<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date][%-5level][%logger{5}:%L] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="eu.lynxware" level="TRACE" />

    <root level="DEBUG">
        <appender-ref ref="console"/>
    </root>
</configuration>